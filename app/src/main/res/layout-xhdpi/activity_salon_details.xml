<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context="com.saad.youssif.alsalonalmalaky.SalonDetails">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <android.support.v7.widget.CardView
                android:id="@+id/salon_details_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="#ffffff"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:src="@drawable/logo2"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/salon_name"
                        android:gravity="right"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"

                        />

                    <TextView
                        android:id="@+id/profile_usernameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/salon_address"
                        android:textSize="@dimen/font_size_textViews"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="#424242"


                        />

                    <TextView
                        android:id="@+id/profile_phoneTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/salon_phone"
                        android:textSize="@dimen/font_size_textViews"
                        android:layout_marginBottom="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="#424242"

                        />
                    <TextView
                        android:id="@+id/salon_facebookTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/facebook_account"
                        android:textSize="@dimen/font_size_textViews"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#424242"


                        />

                    <TextView
                        android:id="@+id/salon_twitterTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/twitter_account"
                        android:textSize="@dimen/font_size_textViews"
                        android:layout_marginBottom="15dp"
                        android:paddingRight="5dp"
                        android:textColor="#424242"

                        />

                    <TextView
                        android:id="@+id/salon_instagramTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/instrgram_account"
                        android:textSize="@dimen/font_size_textViews"
                        android:layout_marginBottom="15dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="#424242"

                        />

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >


                        <android.support.v7.widget.CardView
                            android:id="@+id/showMapcardView"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            app:cardBackgroundColor="#10bbb3"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="7dp"
                            android:layout_marginBottom="10dp"

                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <TextView
                                    android:id="@+id/showMapTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:text="إظهار الخريطة"
                                    android:textColor="#fff"
                                    android:layout_gravity="right"
                                    android:gravity="center"
                                    android:textSize="@dimen/font_size_textViews"
                                    android:layout_alignParentLeft="true"

                                    />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/ubercardView"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:textAlignment="center"
                            app:cardBackgroundColor="#10bbb3"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="7dp"

                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                >

                                <TextView
                                    android:id="@+id/uberTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="left"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="توصيل"
                                    android:textColor="#fff"
                                    android:textSize="@dimen/font_size_textViews" />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>




</LinearLayout>
