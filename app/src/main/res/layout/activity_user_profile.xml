<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.saad.youssif.alsalonalmalaky.UserProfile"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">



    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp"
        tools:layout_conversion_absoluteHeight="96dp"
        tools:layout_conversion_absoluteWidth="276dp"
        tools:layout_conversion_absoluteX="54dp"
        tools:layout_conversion_absoluteY="462dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.207"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center">

            <TextView
                android:id="@+id/profile_usernameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="8dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/profile_phoneTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="رقم الهاتف : "
                android:textSize="@dimen/font_size_textViews"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:layout_editor_absoluteY="100dp"
                tools:layout_editor_absoluteX="8dp"
                android:layout_marginBottom="15dp"
                android:textColor="#424242"
                />

            <TextView
                android:id="@+id/profile_typeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نوع الحساب : "
                android:textSize="@dimen/font_size_textViews"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:layout_editor_absoluteY="175dp"
                tools:layout_editor_absoluteX="16dp"
                android:layout_marginBottom="15dp"
                android:textColor="#424242"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.54">


                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:showText="true"
                    android:splitTrack="false"
                    android:text="الإشعارات"
                    android:textSize="17sp"
                    android:textColor="#424242"
                    />


            </LinearLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/changePassCardView"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="#10bbb3"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/profile_changePassTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:text="تغيير كلمة السر"
                        android:textAlignment="center"
                        android:textColor="@color/White"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>


    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بيانات العميل : "
        android:textSize="@dimen/font_size_textViews"
        android:textColor="#424242"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/cardView"
        app:layout_constraintRight_toRightOf="@+id/cardView"
        android:layout_marginRight="4dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView" />






</android.support.constraint.ConstraintLayout>
