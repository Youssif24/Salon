<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context="com.saad.youssif.alsalonalmalaky.Register"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/register_cards_width"
                android:layout_height="120dp"
                app:srcCompat="@drawable/logo2"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                />


            <android.support.v7.widget.CardView
                android:id="@+id/rgstNameCardView"
                android:layout_width="@dimen/register_cards_width"
                android:layout_height="@dimen/register_cards_height"
                android:background="@color/White"
                android:textAlignment="center"
                app:cardCornerRadius="25dp"
                app:cardElevation="@dimen/register_cards_elvation"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/White">

                    <EditText
                        android:id="@+id/registerNameEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/White"
                        android:hint="إسم العميل"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textAlignment="center"

                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="@dimen/register_cards_width"
                android:layout_height="@dimen/register_cards_height"
                android:background="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:id="@+id/rgstPhoneCardView"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/White">

                    <EditText
                        android:id="@+id/registerphoneEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="رقم الهاتف"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:background="@color/White"
                        android:textAlignment="center"

                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="@dimen/register_cards_width"
                android:layout_height="@dimen/register_cards_height"
                android:background="@color/White"
                app:cardCornerRadius="25dp"
                app:cardElevation="@dimen/register_cards_elvation"
                android:id="@+id/rgstPasswordCardView"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/White">

                    <EditText
                        android:id="@+id/registerPasswordEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionUnspecified"
                        android:hint="كلمة المرور"
                        android:inputType="textPassword"
                        android:textAlignment="center"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:background="@color/White" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/registercardView"
                android:layout_width="@dimen/register_cards_width"
                android:layout_height="@dimen/register_cards_height"
                android:textAlignment="center"
                app:cardBackgroundColor="#10bbb3"
                app:cardCornerRadius="25dp"
                app:cardElevation="7dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/regisertTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="تسجيل"
                        android:textColor="#fff"
                        android:textSize="25sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>





</LinearLayout>
