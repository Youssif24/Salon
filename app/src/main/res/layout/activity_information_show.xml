<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context="com.saad.youssif.alsalonalmalaky.InformationShow">


    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"

            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center">

                <TextView
                    android:id="@+id/info_usernameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="إسم العميل : "
                    android:textSize="@dimen/font_size_textViews"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/info_phoneTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="رقم الهاتف : "
                    android:textSize="@dimen/font_size_textViews"
                    android:layout_marginBottom="15dp"
                    />
            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/reply_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/reply_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center">

                <TextView
                    android:id="@+id/info_replyTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الرد"
                    android:textSize="@dimen/font_size_textViews"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />


            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>




</LinearLayout>
